{% extends 'base.html.twig' %}

{% block title %}Hello PaysController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if error !="" %}
    <p>{{error}}</p>
{% endif %}
<a href="{{ path('ficheElection', {'id': idelection}) }}">Resultat de l'election</a>
<div class="example-wrapper">

 <form action="" method="post">
    <select name="choix">
    {% for etat in etats %}
    <option value="{{etat.id}}">{{etat.reference}}</option>
    {% endfor %}
    </select>
    <table>
    <tr>
    <td>President</td>
    <td>Nombre de voie</td>
    </tr>
    {% for president in presidents %}
      <tr>
        <td>{{president.nom}}</td>
        <td><input type="text" name={{president.id}} /> </td>
      </tr>
      {% endfor %}
      </table>
      <input type="submit" value="confirmer"/>
       </form>

  

</div>
{% endblock %}
