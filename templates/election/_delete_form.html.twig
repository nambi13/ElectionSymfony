<form method="post" action="{{ path('election_delete', {'id': election.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ election.id) }}">
    <button class="btn">Delete</button>
</form>
